{
  "name": "electron-react-js-template",
  "version": "1.0.0",
  "description": "A professional Electron-React application template",
  "author": {
    "name": "Your Name",
    "email": "youremail@example.com"
  },
  "license": "MIT",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.1"
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-react": "^7.18.6",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "electron": "^24.2.0",
    "electron-builder": "^23.6.0",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.5.0",
    "jest-junit": "^13.2.0",
    "postcss": "^8.4.23",
    "prettier": "^3.3.3",
    "prettier-linter-helpers": "^1.0.0",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.3.2",
    "wait-on": "^7.0.1"
  },
  "scripts": {
    "start": "concurrently \"npm run react-start\" \"npm run electron-start\"",
    "build": "npm run react-build && npm run electron-build",
    "react-build": "react-scripts build",
    "test": "react-scripts test --env=jsdom --passWithNoTests",
    "test:ci": "react-scripts test --env=jsdom --passWithNoTests --ci --coverage",
    "eject": "react-scripts eject",
    "lint": "eslint .",
    "lint:fix": "eslint --fix . && prettier --write \"**/*.{js,jsx,json,md}\"",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "react-start": "cross-env BROWSER=none react-scripts start",
    "electron-start": "wait-on tcp:3000 && electron .",
    "electron-build": "electron-builder build --linux",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-build": "npm run react-build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/index.js",
      "!src/serviceWorker.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.yourcompany.${name}",
    "productName": "Your App Name",
    "files": [
      "build/**/*",
      "public/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development",
      "icon": "build/icon.png"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    }
  }
}
